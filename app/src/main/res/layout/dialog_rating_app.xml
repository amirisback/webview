<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog_rating_app"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/frogo_dimen_24dp">

    <ImageView
        android:layout_width="@dimen/frogo_dimen_160dp"
        android:layout_height="@dimen/frogo_dimen_160dp"
        android:src="@drawable/ic_exit_emoticon" />

    <TextView
        android:id="@+id/tv_exit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/frogo_dimen_16dp"
        android:layout_marginBottom="@dimen/frogo_dimen_16dp"
        android:text="@string/activity_exit_tv_exit_title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/frogo_dimen_font_20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frogo_dimen_48dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_rate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/frogo_dimen_16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_image"
            android:paddingBottom="@dimen/frogo_dimen_4dp"
            android:text="@string/activity_exit_btn_rate"
            android:textColor="@color/colorButtonText"
            android:textSize="@dimen/frogo_dimen_font_20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_image"
            android:paddingBottom="@dimen/frogo_dimen_4dp"
            android:text="@string/activity_exit_btn_exit"
            android:textColor="@color/colorButtonText"
            android:textSize="@dimen/frogo_dimen_font_20sp" />

    </LinearLayout>

</LinearLayout>